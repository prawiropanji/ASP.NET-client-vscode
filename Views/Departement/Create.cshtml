@{
    ViewData["Title"] = "Create";
}

@section Scripts{

    <script src="~/js/departementCreate.js" defer></script>
}

    <h1>Create</h1>

    <h4>Departement</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Departement Name</label>
                    <input name="departementName" class="form-control" required/>
                    <div class="valid-feedback">
                        Looks Good
                    </div>
                    <div class="invalid-feedback">
                        Please insert departement name!
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">Division ID</label>
                    <select name="divisionId" class="form-select">
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" data-bs-toggle="modal" data-bs-target="#saveNewDepartementModal" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>



