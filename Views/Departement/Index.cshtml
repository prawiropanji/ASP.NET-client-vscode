                                    <label for="departNameInput" class="control-label">Name</label>
                                    <input id="departNameInput" name="departementName" class="form-control" />

                                </div>
                                <div class="form-group">
                                    <label for="divisionSelect" class="control-label">Division ID</label>
                                    <select id="divisionSelect" name="divisionId" class="form-control"></select>

    
                                </div>
                                <div class="form-group mt-2">

                                </div>
                            </form>

                    <!-- /Isi modal -->

                </div>
                <div class="modal-footer">
                    <button type="button" id="closeModal" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>


